---
// Smart image component that uses API route with optimization features
interface Props {
  src: string;
  alt: string;
  price?: string;
  badge?: string;
  badgeColor?: string;
  priority?: boolean;
  class?: string;
}

const {
  src,
  alt,
  price,
  badge,
  badgeColor = 'bg-accent-gold text-charcoal',
  priority = false,
  class: className = ''
} = Astro.props;

// Convert direct asset path to API route
const getImageSrc = (src: string) => {
  if (src.startsWith('/assets/')) {
    return `/api/image${src}`;
  }
  return src;
};

// Generate responsive srcset for better performance
const generateSrcSet = (baseSrc: string) => {
  if (!baseSrc.startsWith('/api/image/assets/')) {
    return undefined;
  }
  
  // For API routes, we can't generate multiple sizes easily
  // But we can add query parameters for different qualities
  return `${baseSrc}?q=75&w=300 300w, ${baseSrc}?q=85&w=600 600w, ${baseSrc}?q=95&w=900 900w`;
};
---

<div class={`relative mb-4 ${className}`}>
  <img
    src={getImageSrc(src)}
    alt={alt}
    width="300"
    height="200"
    class="rounded-xl w-full h-32 object-cover"
    loading={priority ? 'eager' : 'lazy'}
    decoding="async"
    style="display: block;"
    onerror="this.src = this.src.replace('/api/image', ''); this.onerror = null;"
  />
  
  {price && (
    <div class={`absolute top-3 right-3 ${badgeColor} px-2 py-1 rounded-full font-bold text-sm`}>
      {price}
    </div>
  )}
  
  {badge && (
    <div class={`absolute top-3 left-3 ${badgeColor} px-2 py-1 rounded-full text-xs font-bold`}>
      {badge}
    </div>
  )}
</div>
