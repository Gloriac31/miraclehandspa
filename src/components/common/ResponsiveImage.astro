---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  priority?: boolean;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg' | 'jpeg';
  sizes?: string;
  placeholder?: 'blur' | 'empty';
  blurDataURL?: string;
  aspectRatio?: string;
  objectFit?: 'cover' | 'contain' | 'fill' | 'scale-down' | 'none';
  objectPosition?: string;
  breakpoints?: number[];
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  class: className = '',
  priority = false,
  loading = 'lazy',
  quality = 80,
  format = 'webp',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  placeholder = 'blur',
  blurDataURL,
  aspectRatio,
  objectFit = 'cover',
  objectPosition = 'center',
  breakpoints = [640, 768, 1024, 1280, 1536]
} = Astro.props;

// Generate responsive sizes based on breakpoints
const responsiveSizes = breakpoints
  .map((bp, index) => {
    const nextBp = breakpoints[index + 1];
    const maxWidth = nextBp ? `${nextBp - 1}px` : '100vw';
    return `(max-width: ${bp}px) ${100 / (breakpoints.length - index)}vw`;
  })
  .join(', ');

const finalSizes = sizes || responsiveSizes;

// Generate a simple blur placeholder if none provided
const defaultBlurDataURL = 'data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iODAwIiBoZWlnaHQ9IjYwMCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cmVjdCB3aWR0aD0iMTAwJSIgaGVpZ2h0PSIxMDAlIiBmaWxsPSIjZjNmNGY2Ii8+PC9zdmc+';

// Build CSS classes for aspect ratio and object fit
const containerClasses = [
  className,
  aspectRatio ? `aspect-[${aspectRatio}]` : '',
  'overflow-hidden'
].filter(Boolean).join(' ');

const imageClasses = [
  'w-full h-full',
  `object-${objectFit}`,
  objectPosition !== 'center' ? `object-${objectPosition}` : ''
].filter(Boolean).join(' ');
---

<div class={containerClasses}>
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={imageClasses}
    loading={priority ? 'eager' : loading}
    quality={quality}
    format={format}
    sizes={finalSizes}
    fetchpriority={priority ? 'high' : 'auto'}
    decoding="async"
  />
</div>
