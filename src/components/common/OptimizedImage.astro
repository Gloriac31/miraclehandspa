---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  priority?: boolean;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg' | 'jpeg';
  sizes?: string;
  placeholder?: 'blur' | 'empty';
  blurDataURL?: string;
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  class: className = '',
  priority = false,
  loading = 'lazy',
  quality = 80,
  format = 'webp',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  placeholder = 'blur',
  blurDataURL
} = Astro.props;

---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={priority ? 'eager' : loading}
  quality={quality}
  format={format}
  sizes={sizes}
  fetchpriority={priority ? 'high' : 'auto'}
  decoding="async"
/>
