---
// Pricing Plans Section Component
---

<section id="pricing" class="py-20 bg-offwhite">
    <div class="container mx-auto px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-roboto font-bold text-charcoal mb-4">Massage Packages</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Save with our comprehensive massage packages designed for your wellness journey.
            </p>
        </div>
        <div class="grid lg:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <div class="bg-white rounded-xl p-8 border-2 border-primary relative hover:shadow-lg transition-shadow">
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-primary text-white px-6 py-2 rounded-full text-sm font-medium">
                    Popular Package
                </div>
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-roboto font-bold text-charcoal mb-4">Body Contour</h3>
                    <div class="text-5xl font-bold text-primary mb-2">$800</div>
                    <div class="text-gray-600">10 sessions</div>
                    <div class="text-sm text-green-600 font-medium mt-2">$80 per session</div>
                </div>
                <ul class="space-y-4 mb-8">
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">10 body contour sessions</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Targeted body shaping</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Professional consultation</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Progress tracking</span>
                    </li>
                </ul>
                <button onclick="openSquareBooking()" class="w-full bg-primary text-white py-3 rounded-lg font-medium hover:bg-blue-600 transition-colors">
                    Choose Body Contour Package
                </button>
            </div>
            
            <div class="bg-white rounded-xl p-8 border-2 border-primary relative hover:shadow-lg transition-shadow">
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-primary text-white px-6 py-2 rounded-full text-sm font-medium">
                    Popular Package
                </div>
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-roboto font-bold text-charcoal mb-4">Lymphatic Massage</h3>
                    <div class="text-5xl font-bold text-primary mb-2">$800</div>
                    <div class="text-gray-600">10 sessions</div>
                    <div class="text-sm text-green-600 font-medium mt-2">$80 per session</div>
                </div>
                <ul class="space-y-4 mb-8">
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">10 lymphatic massage sessions</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Reduce swelling & inflammation</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Boost immune system</span>
                    </li>
                    <li class="flex items-center">
                        <i class="fa-solid fa-check text-primary mr-3"></i>
                        <span class="text-gray-700">Detoxification support</span>
                    </li>
                </ul>
                <button onclick="openSquareBooking()" class="w-full bg-primary text-white py-3 rounded-lg font-medium hover:bg-blue-600 transition-colors">
                    Choose Lymphatic Package
                </button>
            </div>
        </div>
    </div>
</section>
