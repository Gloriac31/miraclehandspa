---
import Layout from '../layouts/Layout.astro';
import PrivacyPolicyContent from '../components/PrivacyPolicy.astro';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';

const breadcrumbItems = [
  { name: "Home", url: "/" },
  { name: "Privacy Policy" }
];

const title = "Privacy Policy - Miracle Hands";
const description = "Read Miracle Hands' Privacy Policy to understand how we collect, use, and protect your personal information when you visit our website or use our massage therapy services.";
---

<Layout title={title} description={description}>
  <Breadcrumbs items={breadcrumbItems} />
  <PrivacyPolicyContent />
</Layout>

